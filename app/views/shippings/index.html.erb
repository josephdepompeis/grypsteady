<p id="notice"><%= notice %></p>

<h1>Listing Shippings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Adr 1</th>
      <th>Adr 2</th>
      <th>State</th>
      <th>Zip</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shippings.each do |shipping| %>
      <tr>
        <td><%= shipping.cart_id %></td>

        <td><%= shipping.name %></td>
        <td><%= shipping.adr_1 %></td>
        <td><%= shipping.adr_2 %></td>
        <td><%= shipping.state %></td>
        <td><%= shipping.zip %></td>
        <td><%= shipping.total %></td>
        <td><%= link_to 'Show', shipping %></td>
        <td><%= link_to 'Edit', edit_shipping_path(shipping) %></td>
        <td><%= link_to 'Destroy', shipping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

